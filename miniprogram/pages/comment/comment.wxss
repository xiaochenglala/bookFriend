




.detail-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info {
  display: flex;
  width: 750rpx;
  height: 400rpx;
}

.detail-img {
  width:40%;
  height: 90%;
  margin: 24rpx;
}



.detail {
  position: relative;
  top: 30rpx;
  width: 50%;
  line-height: 60rpx;
}

.detail view {
  color: #fff;
  font-size: 24rpx;
}

.detail .detail-title {
  font-size: 40rpx;
  font-weight: bolder;
}

.comment {
  position: relative;
  height: 450rpx;
  width: 100%;
  background-color: #FFF0F5;
  border-bottom: 1px dashed black;
}

.content {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  height: 300rpx;
  width: 90%;
  word-break: break-all;
}

.user {
  position: absolute;
  left: 120rpx;
  top: 20rpx;
  font-size: 50rpx;
  color: rgb(26, 102, 146); 
}

.avatar-url{
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
